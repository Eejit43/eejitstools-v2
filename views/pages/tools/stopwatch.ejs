<div class="toolbox">
    <h1>Stopwatch:</h1>
    <div class="tooltext" style="padding-top: 20px">
        <span class="timer-time"><span id="hours-display">00</span>:<span id="minutes-display">00</span>:<span id="seconds-display">00</span>.<span id="milliseconds-display">000</span></span>
        <br /><br />
        <button id="start" style="padding: 10px; font-size: 20px">Start</button>
        <button id="stop" style="padding: 10px; font-size: 20px">Stop</button>
        <button id="reset" style="padding: 10px; font-size: 20px">Reset</button>
    </div>
</div>
