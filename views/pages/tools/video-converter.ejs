<div class="tooltext">
    <div class="tooltext">
        Video:<br /><br />
        <label for="file-upload" class="file-upload"><i class="fa-solid fa-file-upload"></i> Upload</label>
        <input id="file-upload" type="file" accept="video/*" /><br /><span style="font-size: 14px; color: dimgray" id="file-message"></span> <br />
        <button id="clear">Clear</button>
    </div>
    <hr style="margin-top: 30px" />
    <div class="basic-grid" style="--min-width: 450px">
        <div class="tooltext">
            Output Type:<br />
            <select id="output-type" disabled>
                <option value="mp4">MP4 (MPEG-4)</option>
                <option value="webm">WebM (VP8)</option>
                <option value="flv">FLV (H.264)</option>
                <option value="mkv">MKV (Matroska)</option>
                <option value="avi">AVI (MS-RLE)</option>
                <option value="wmv">WMV (Windows Media)</option>
                <option value="mov">MOV (QuickTime Movie)</option>
            </select>
            <br />
            <button id="convert" disabled>Convert</button>
            <span id="converting-message"></span>
        </div>
        <div class="tooltext">
            Converted Video:<br />
            <video id="video-output" style="max-width: 80%" src="" controls></video> <br />
            <a id="open-converted-link" target="_blank"><button id="open-converted-result" disabled>Open in new tab</button></a>
            <a id="download-converted-link" target="_blank" download><button id="download-converted-result" disabled>Download</button></a>
        </div>
    </div>
</div>
