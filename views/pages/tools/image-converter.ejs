<div class="toolbox">
    <h1>Image Converter:</h1>
    <div class="tooltext">
        <div class="basic-grid" style="--min-width: 450px">
            <div class="tooltext">
                Image:<br /><br />
                <label for="file-upload" class="file-upload"><i class="fa-solid fa-file-upload"></i> Upload</label>
                <input id="file-upload" type="file" /><br /><span style="font-size: 14px; color: dimgray" id="file-message"></span> <br />
                <button id="load" disabled>Load</button>
                <button id="clear">Clear</button>
            </div>
            <div class="tooltext">
                Image Preview:<br />
                <canvas id="image-preview" style="max-width: 80%" width="0" height="0"></canvas>
            </div>
        </div>
        <hr style="margin-top: 30px" />
        <div class="basic-grid" style="--min-width: 450px">
            <div class="tooltext">
                Output Type:<br />
                <select id="output-type" disabled>
                    <option value="png" selected>PNG</option>
                    <option value="jpg">JPG</option>
                    <option value="webp">WebP</option>
                </select>
                <br />
                <button id="convert" disabled>Convert</button>
            </div>
            <div class="tooltext">
                Converted Image:<br />
                <img id="image-output" style="max-width: 80%" src="" /> <br />
                <a id="open-converted-link" target="_blank"><button id="open-converted-result" disabled>Open in new tab</button></a>
            </div>
        </div>
    </div>
</div>
