<div class="toolbox">
    <h1>
        <span style="font-size: 27px" class="mcui-text format-2"><span class="format-l">Minecraft</span></span> Formatting Codes:
    </h1>
    <p class="info">For more information about formatting codes, see <a href="https://minecraft.fandom.com/wiki/Formatting_codes" target="_blank">here</a>.</p>
    <div class="warning mc-scroll-msg">Scroll →</div>
    <table class="info-table">
        <thead>
            <tr>
                <th>Color & Minecraft Name</th>
                <th>Color Code</th>
                <th><span class="tooltip-bottom" data-tooltip="Message of the Day">MOTD</span> Code</th>
                <th>Hex Code</th>
            </tr>
        </thead>
        <tbody><% for (let i = 0; i < minecraftColorCodes.length; i++) { %>
            <tr<% if (minecraftColorCodes[i]) { %> style="background-color: #<%- minecraftColorCodes[i].backgroundColor %>; color: #<%- minecraftColorCodes[i].textColor %>"<% } %>>
                <td><%= minecraftColorCodes[i].color %><br />(<code class="color-name"><%= minecraftColorCodes[i].colorName %></code>)</td>
                <td>§<%= minecraftColorCodes[i].colorCode %></td>
                <td>\u<%= minecraftColorCodes[i].motdCode %></td>
                <td>#<%= minecraftColorCodes[i].hexCode %></td>
            </tr><% } %>
        </tbody>
    </table>

    <table class="info-table" style="overflow-x: hidden; margin-top: 30px">
        <thead>
            <tr>
                <th>Type</th>
                <th>Chat Code</th>
                <th><span class="tooltip-bottom" data-tooltip="Message of the Day">MOTD</span> Code</th>
            </tr>
        </thead>
        <tbody><% for (let i = 0; i < minecraftFormattingCodes.length; i++) { %>
            <tr>
                <td<% if (minecraftFormattingCodes[i].style) { %> style="<%- minecraftFormattingCodes[i].style %>"<% } %>><%= minecraftFormattingCodes[i].type %></td>
                <td>§<%= minecraftFormattingCodes[i].formattingCode %></td>
                <td>\u<%= minecraftFormattingCodes[i].motdCode %></td>
            </tr><% } %>
        </tbody>
    </table>
</div>
