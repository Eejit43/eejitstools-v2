<header>
    <span class="mainlogo">
        <span style="color: #ff5555">E</span><span style="color: #ffaa00">e</span><span style="color: #ffff55">j</span><span style="color: #55ff55">i</span><span style="color: #00aa00">t</span><span style="color: #00aaaa">'</span><span style="color: #5555ff">s</span>
        <span style="color: #aa00aa" class="mainlogo-tools">Tools</span>
    </span>
    <br />
    <div class="message">
        Welcome to my site! Here are some handy tools I made whilst learning
        <i class="fa-brands fa-html5"></i> <span class="tooltip-bottom" data-tooltip="Hypertext Markup Language">HTML</span>, <i class="fa-brands fa-css3-alt"></i> <span class="tooltip-bottom" data-tooltip="Cascading Style Sheets">CSS</span>, and <i class="fa-brands fa-square-js"></i> JavaScript!
        <span class="mobile-only"><br /><br /><a href="/search">Search the site!</a></span>
    </div>
</header>

<% for (const category of Object.values(pages)) { %>
<table class="tools-table">
    <tbody>
        <% for (const page of Object.values(category)) { %>
        <tr>
            <td style="width: 15vw">
                <a href="<%- page.link %>"><i class="page-icon fa-regular fa-<%- page.icon %>"></i><%- page.title %></a>
            </td>
            <td><%- page.description %></td>
        </tr>
        <% } %>
    </tbody>
</table>
<% } %>
