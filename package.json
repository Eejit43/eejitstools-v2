{
    "name": "eejitstools",
    "type": "module",
    "scripts": {
        "build": "pnpm run remove-compiled && npx esbuild compile.ts --outfile=compile.js --target=node20 --platform=node && node compile.js",
        "dev": "pnpm run build && node development.js --enable-source-maps",
        "force-deploy": "railway up",
        "remove-compiled": "rm -rf dist && find . -maxdepth 1 -type f \\( -name '*.js' -o -name '*.js.map' \\) -delete",
        "start": "node --enable-source-maps --max-old-space-size=100 dist/app.js"
    },
    "prettier": "@eejit/prettier-config",
    "dependencies": {
        "@fastify/rate-limit": "^8.0.3",
        "@fastify/static": "^6.10.2",
        "@fastify/view": "^8.0.0",
        "canvas": "^2.11.2",
        "chalk": "^5.3.0",
        "chokidar": "^3.5.3",
        "consola": "^3.2.3",
        "esbuild": "^0.19.2",
        "esbuild-postcss": "^0.0.4",
        "fastify": "^4.21.0",
        "glob": "^10.3.3",
        "handlebars": "^4.7.8",
        "mongoose": "^7.4.3",
        "node-html-parser": "^6.1.5",
        "postcss": "^8.4.27",
        "postcss-preset-env": "^9.1.1"
    },
    "devDependencies": {
        "@eejit/eslint-config-typescript": "^2.10.0",
        "@eejit/prettier-config": "^2.0.0",
        "@eejit/stylelint-config": "^1.1.1",
        "@tsconfig/recommended": "^1.0.2",
        "@types/chroma-js": "^2.4.0",
        "@types/node": "^20.5.0",
        "@types/ua-parser-js": "^0.7.36",
        "mathjs": "^11.9.1",
        "stylelint": "^15.10.2",
        "tree-kill": "^1.2.2",
        "typescript": "^5.1.6"
    },
    "packageManager": "pnpm@8.6.12"
}
