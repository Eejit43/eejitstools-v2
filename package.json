{
    "name": "eejitstools",
    "type": "module",
    "scripts": {
        "build": "pnpm run remove-compiled && npx esbuild compile.ts --outfile=compile.js --target=node20 --platform=node && node compile.js",
        "dev": "pnpm run build && node development.js --enable-source-maps",
        "force-deploy": "railway up",
        "remove-compiled": "rm -rf dist && find . -maxdepth 1 -type f \\( -name '*.js' -o -name '*.js.map' \\) -delete",
        "start": "node --no-warnings --enable-source-maps --max-old-space-size=100 dist/app.js"
    },
    "prettier": "@eejit/prettier-config",
    "dependencies": {
        "@fastify/rate-limit": "^8.0.3",
        "@fastify/static": "^6.11.1",
        "@fastify/view": "^8.1.0",
        "canvas": "^2.11.2",
        "chalk": "^5.3.0",
        "chokidar": "^3.5.3",
        "consola": "^3.2.3",
        "esbuild": "^0.19.3",
        "esbuild-postcss": "^0.0.4",
        "fastify": "^4.23.2",
        "handlebars": "^4.7.8",
        "mongoose": "^7.5.1",
        "node-html-parser": "^6.1.9",
        "postcss": "^8.4.29",
        "postcss-preset-env": "^9.1.3"
    },
    "devDependencies": {
        "@eejit/eslint-config-typescript": "^2.18.0",
        "@eejit/prettier-config": "^2.0.2",
        "@eejit/stylelint-config": "^1.1.1",
        "@tsconfig/recommended": "^1.0.2",
        "@types/chroma-js": "^2.4.1",
        "@types/ua-parser-js": "^0.7.37",
        "mathjs": "^11.11.0",
        "stylelint": "^15.10.3",
        "tree-kill": "^1.2.2",
        "typescript": "^5.2.2"
    },
    "packageManager": "pnpm@8.7.5"
}
