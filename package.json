{
    "name": "eejitstools",
    "private": true,
    "type": "module",
    "packageManager": "pnpm@8.6.4",
    "scripts": {
        "start": "node --max-old-space-size=100 app.js",
        "dev": "pnpm run build && node dev.js",
        "build": "node compile.js",
        "force-deploy": "railway up",
        "logs": "railway logs",
        "remove-compiled": "find . -type f -name '*.js' ! -name 'compile.js' ! -path './node_modules/*' ! -path './public/scripts/external/*' -delete"
    },
    "dependencies": {
        "@fastify/rate-limit": "^8.0.1",
        "@fastify/static": "^6.10.2",
        "@fastify/view": "^7.4.1",
        "canvas": "^2.11.2",
        "chalk": "^5.2.0",
        "chokidar": "^3.5.3",
        "consola": "^3.1.0",
        "esbuild": "^0.18.9",
        "fastify": "^4.18.0",
        "glob": "^10.3.0",
        "handlebars": "^4.7.7",
        "mongoose": "^7.3.1",
        "node-html-parser": "^6.1.5"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.2",
        "@types/chroma-js": "^2.4.0",
        "@types/node": "^20.3.2",
        "@types/ua-parser-js": "^0.7.36",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "eslint": "^8.43.0",
        "mathjs": "^11.8.2",
        "prettier": "^2.8.8",
        "prettier-plugin-organize-imports": "^3.2.2",
        "stylelint": "^15.9.0",
        "stylelint-config-standard": "^33.0.0",
        "tree-kill": "^1.2.2",
        "typescript": "^5.1.3"
    }
}
