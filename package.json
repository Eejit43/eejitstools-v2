{
    "name": "eejitstools",
    "private": true,
    "type": "module",
    "packageManager": "pnpm@8.6.7",
    "scripts": {
        "start": "node --max-old-space-size=100 app.js",
        "dev": "pnpm run build && node dev.js",
        "build": "node compile.js",
        "force-deploy": "railway up",
        "logs": "railway logs",
        "remove-compiled": "find . -type f -name '*.js' ! -name 'compile.js' ! -path './node_modules/*' ! -path './public/scripts/external/*' -delete && find ./public/styles -type f -name '*.css' ! -path './public/styles/external/*' -delete"
    },
    "dependencies": {
        "@fastify/rate-limit": "^8.0.2",
        "@fastify/static": "^6.10.2",
        "@fastify/view": "^8.0.0",
        "canvas": "^2.11.2",
        "chalk": "^5.3.0",
        "chokidar": "^3.5.3",
        "consola": "^3.2.3",
        "esbuild": "^0.18.11",
        "esbuild-postcss": "^0.0.4",
        "fastify": "^4.19.2",
        "glob": "^10.3.3",
        "handlebars": "^4.7.7",
        "mongoose": "^7.3.3",
        "node-html-parser": "^6.1.5",
        "postcss": "^8.4.26",
        "postcss-preset-env": "^9.0.0"
    },
    "devDependencies": {
        "@eejit/eslint-config-typescript": "^1.0.4",
        "@tsconfig/recommended": "^1.0.2",
        "@types/chroma-js": "^2.4.0",
        "@types/node": "^20.4.1",
        "@types/ua-parser-js": "^0.7.36",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.44.0",
        "eslint-plugin-jsdoc": "^46.4.3",
        "mathjs": "^11.8.2",
        "prettier": "^3.0.0",
        "prettier-plugin-css-order": "^1.3.1",
        "prettier-plugin-organize-imports": "^3.2.2",
        "stylelint": "^15.10.1",
        "stylelint-config-standard": "^34.0.0",
        "tree-kill": "^1.2.2",
        "typescript": "^5.1.6"
    }
}
